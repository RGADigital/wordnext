{
    "private": true,
    "scripts": {
        "build-storybook": "build-storybook",
        "build": "NODE_PATH=./ next build",
        "dev": "NODE_PATH=./ next dev",
        "lint:eslint": "next lint",
        "lint:prettier": "prettier --ignore-path .gitignore --check .",
        "lint:scss": "npx stylelint \"**/*.scss\"",
        "lint": "yarn lint:prettier && yarn lint:eslint && yarn lint:scss",
        "pre-commit": "pretty-quick --staged --ignore-path=.eslintignore && lint-staged",
        "pre-push": "yarn validate",
        "prepare": "husky install",
        "prettier": "npx prettier --write .",
        "start": "next start -p $PORT",
        "export": "NODE_PATH=./ next build && next export",
        "storybook": "start-storybook -p 6006",
        "upgrade-deps": "npm-upgrade",
        "validate": "yarn lint && yarn build"
    },
    "dependencies": {
        "@apollo/client": "^3.6.9",
        "classnames": "2.3.1",
        "graphql": "^16.5.0",
        "graphql-tag": "^2.12.6",
        "next": "latest",
        "next-intl": "^2.7.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "sass": "^1.54.0",
        "sass-loader": "^13.0.2"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": "eslint --fix"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn js-lint, yarn style-lint"
        }
    },
    "devDependencies": {
        "@babel/core": "^7.18.9",
        "@storybook/addon-actions": "^6.5.9",
        "@storybook/addon-essentials": "^6.5.9",
        "@storybook/addon-interactions": "^6.5.9",
        "@storybook/addon-links": "^6.5.9",
        "@storybook/builder-webpack5": "^6.5.9",
        "@storybook/manager-webpack5": "^6.5.9",
        "@storybook/react": "^6.5.9",
        "@storybook/testing-library": "^0.0.13",
        "autoprefixer": "10.4.2",
        "babel-loader": "^8.2.5",
        "copy-webpack-plugin": "^11.0.0",
        "eslint": "7.32.0",
        "eslint-config-next": "11.1.2",
        "husky": "^8.0.1",
        "lint-staged": "11.2.6",
        "next-sitemap": "^2.4.6",
        "npm-upgrade": "3.0.0",
        "postcss": "8.4.5",
        "prettier": "^2.7.1",
        "pretty-quick": "^3.1.3",
        "sass-resources-loader": "^2.2.5",
        "styled-components": "^5.3.3",
        "stylelint": "^13.13.1",
        "stylelint-config-css-modules": "^2.2.0",
        "stylelint-config-sass-guidelines": "^8.0.0"
    }
}
